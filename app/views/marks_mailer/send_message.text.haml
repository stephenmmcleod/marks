- if @message.present? && @message != ""
    =simple_format @message
- else
    ="Your current marks are as follows."
    = "\r\n"

    -@user.marks.each do |mark|
        ="#{mark.assignment.name}: #{mark.value} out of #{mark.assignment.total_marks} - worth #{mark.assignment.weight}% \n"
        =simple_format mark.comments
        = "\r\n"